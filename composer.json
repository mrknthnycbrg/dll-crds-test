{
    "name": "mrknthnycbrg/dll-crds-test",
    "type": "project",
    "description": "The capstone project version of the research management system of the DLL-CRDS office.",
    "license": "proprietary",
    "authors": [
        {
            "name": "Mark Anthony A. Cabriga",
            "email": "macabriga@gmail.com",
            "homepage": "https://www.facebook.com/mrknthnycbrg",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "bezhansalleh/filament-shield": "^3.2",
        "filament/filament": "^3.2",
        "flowframe/laravel-trend": "^0.2.0",
        "gehrisandro/tailwind-merge-laravel": "^1.2",
        "laravel/framework": "^11.0",
        "laravel/horizon": "^5.24",
        "laravel/jetstream": "^5.0",
        "laravel/sanctum": "^4.0",
        "laravel/scout": "^10.8",
        "laravel/telescope": "^5.0",
        "laravel/tinker": "^2.9",
        "livewire/livewire": "^3.0",
        "openai-php/laravel": "^0.8.0",
        "pxlrbt/filament-environment-indicator": "^2.0",
        "shuvroroy/filament-spatie-laravel-backup": "^2.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^11.0.1",
        "spatie/laravel-ignition": "^2.4",
        "tomasvotruba/bladestan": "^0.5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan",
        "pint": "vendor/bin/pint",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
